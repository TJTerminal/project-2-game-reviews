<%- include('../partials/header') %>

<section id="show-page">
  <div>Name: </div>
  <div><%= game.name %></div>
  <div>Developer: </div>
  <div><%= game.developer %></div>
  <div>Publisher: </div>
  <div><%= game.publisher %></div>
  <div>Platform: </div>
  <div><%= game.platform %></div>
  <div>Release Date: </div>
  <div><%= game.releaseDate %></div>
  <div>Genre: </div>
  <div><%= game.genre %></div>
  <div>Reviews: </div>
  <div><%= game.reviews %></div>
</section>

<br><br>
<h2>Reviews</h2>
<form id="add-review-form" method="POST"
  action="/games/<%= game._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating" id="score">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
    <option value="6">6</option>
    <option value="7">7</option>
    <option value="8">8</option>
    <option value="9">9</option>
    <option value="10">10</option>
  </select>
  <input type="submit" value="Add Review">
</form>

<% if (game.reviews.length) { %>
  <table>
    <thead>
      <tr>
      	<th>Date</th>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% var total = 0 %>
      <% game.reviews.forEach(function(r) { %>
        <% total += r.rating %>
        <tr>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
        </tr>
        <% }); %>
        <tr>
          <td colspan="2"></td>
          <td><strong><%= (total / game.reviews.length).toFixed(1) %></strong></td>
        </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>

<%- include('../partials/footer') %>